import java.util.Scanner;

public class BinarySearch {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        int n, target;

        System.out.print("How many numbers? ");
        n = sc.nextInt();

        int[] arr = new int[n];

        System.out.print("Enter " + n + " numbers (small to large): ");
        for (int i = 0; i < n; i++) {
            arr[i] = sc.nextInt();
        }

        System.out.print("Search for which number? ");
        target = sc.nextInt();

        int low = 0;
        int high = n - 1;
        int found = -1;

        while (low <= high) {
            int mid = (low + high) / 2;

            if (arr[mid] == target) {
                found = mid;
                break;
            }

            if (arr[mid] < target) {
                low = mid + 1;
            } else {
                high = mid - 1;
            }
        }

        if (found != -1) {
            System.out.println("Found at index " + found);
        } else {
            System.out.println("Not found");
        }

        sc.close();
    }
}
